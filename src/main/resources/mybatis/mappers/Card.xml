<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="card">

	<!-- 디비 넣기 -->
	<insert id="sendcard" parameterType="CardVo">
		<![CDATA[
			insert into card 
			values(seq_card_no.nextval,#{userNo},#{replyNo},#{cardImgNo},#{receiveContent},sysdate,#{cardAge},#{cardGender});
		]]>
	
	</insert> 

	<!-- 사진 목록 가져오기 -->
	<select id="cardbg" resultType="CardVo">
		<![CDATA[
			select  cardImgNo,
			        cardImgName,
			        cardImgSrc
			from cardImg
		]]>
	</select>
	
	<!-- 내가 쓴 카드 목록 가져오기 -->

	<!-- 답장 카드 목록 가져오기 -->






</mapper>